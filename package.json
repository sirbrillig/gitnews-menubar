{
  "name": "gitnews-menubar",
  "version": "1.7.0",
  "description": "GitHub notifications in your menu bar",
  "productName": "Gitnews",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "install-deps": "yarn",
    "dist-clean": "rm -rf dist && rm -rf node_modules",
    "prepare-release": "npm run dist-clean && npm run build",
    "build": "npm run install-deps && npm run compile-for-production && npm run build-osx-package",
    "compile-for-production": "electron-webpack compile",
    "build-osx-package": "electron-builder",
    "test": "NODE_PATH=./src mocha tests",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "menu",
    "github",
    "notifications"
  ],
  "build": {
    "appId": "com.electron.gitnews-menubar",
    "mac": {
      "icon": "static/images/gitnews-menubar.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  },
  "author": "Payton Swick <payton@foolord.com>",
  "license": "MIT",
  "dependencies": {
    "date-fns": "^1.30.1",
    "debug": "^4.1.1",
    "dotenv": "^16.0.3",
    "easy-auto-launch": "^6.0.2",
    "electron-debug": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "gitnews": "^3.1.2",
    "gridicons": "^3.3.1",
    "menubar": "^9.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^5.1.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "semver": "^7.3.8",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/plugin-webpack": "^6.0.4",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "chai": "^4.0.0",
    "chai-sinon": "^2.8.1",
    "electron": "^22.0.0",
    "electron-react-devtools": "^0.5.3",
    "electron-webpack": "^2.8.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wpcalypso": "^4.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-wpcalypso": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.0",
    "node-loader": "^2.0.0",
    "prettier": "1.19.1",
    "sinon": "^7.5.0",
    "webpack": "^4.44.1"
  },
  "resolutions": {
    "js-yaml": "3.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirbrillig/gitnews-menubar.git"
  },
  "bugs": {
    "url": "https://github.com/sirbrillig/gitnews-menubar/issues"
  },
  "homepage": "https://github.com/sirbrillig/gitnews-menubar#readme",
  "electronWebpack": {
    "renderer": {
      "template": "src/renderer/index.html"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
