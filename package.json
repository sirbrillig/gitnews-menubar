{
  "name": "gitnews-menubar",
  "version": "1.6.0",
  "description": "GitHub notifications in your menu bar",
  "productName": "Gitnews",
  "main": "src/main/index.js",
  "scripts": {
    "start": "npm run install-deps && electron-webpack dev",
    "install-deps": "yarn",
    "dist-clean": "rm -rf dist && rm -rf node_modules",
    "prepare-release": "npm run dist-clean && npm run build",
    "build": "npm run install-deps && npm run compile-for-production && npm run build-osx-package",
    "compile-for-production": "electron-webpack compile",
    "build-osx-package": "electron-builder",
    "test": "NODE_PATH=./src mocha tests"
  },
  "keywords": [
    "menu",
    "github",
    "notifications"
  ],
  "build": {
    "appId": "com.electron.gitnews-menubar",
    "mac": {
      "icon": "static/images/gitnews-menubar.icns"
    }
  },
  "author": "Payton Swick <payton@foolord.com>",
  "license": "MIT",
  "dependencies": {
    "@sirbrillig/ensured-image": "^1.0.0",
    "auto-launch": "^5.0.1",
    "conf": "^7.1.1",
    "date-fns": "^1.30.1",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "electron-debug": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-unhandled": "^3.0.2",
    "gitnews": "^3.1.1",
    "gridicons": "^3.3.1",
    "menubar": "^9.0.1",
    "raven": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^5.1.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "semver": "^7.3.2",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "chai": "^4.0.0",
    "chai-sinon": "^2.8.1",
    "devtron": "^1.4.0",
    "electron": "^9.3.0",
    "electron-builder": "^22.8.0",
    "electron-react-devtools": "^0.5.3",
    "electron-webpack": "^2.8.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wpcalypso": "^4.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-wpcalypso": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.0",
    "prettier": "1.19.1",
    "sinon": "^7.5.0",
    "webpack": "^4.44.1"
  },
  "resolutions": {
    "js-yaml": "3.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirbrillig/gitnews-menubar.git"
  },
  "bugs": {
    "url": "https://github.com/sirbrillig/gitnews-menubar/issues"
  },
  "homepage": "https://github.com/sirbrillig/gitnews-menubar#readme",
  "electronWebpack": {
    "renderer": {
      "template": "src/renderer/index.html"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
