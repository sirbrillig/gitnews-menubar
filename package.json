  },
  "homepage": "https://github.com/sirbrillig/gitnews-menubar#readme",
  "electronWebpack": {
    "renderer": {
      "template": "src/renderer/index.html"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
